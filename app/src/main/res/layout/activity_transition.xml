<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <Button
        android:id="@+id/explode_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Explode"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <Button
        android:id="@+id/slide_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Slide"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>



    <Button
        android:id="@+id/fade_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Fade"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <Button
        android:id="@+id/share_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  SharedElement"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:drawableStart="@drawable/circle_24dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:gravity="start"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:src="@drawable/cat"
            android:layout_margin="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:transitionName="cat"
            android:elevation="5dp"/>
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="xottys@163.com"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:elevation="5dp"
            android:transitionName="title_name"
            android:textColor="#353535"/>
    </RelativeLayout>
    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Exit"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:textSize="20sp"
        />
</LinearLayout>